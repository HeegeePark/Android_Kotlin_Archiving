<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".JoinActivity">

    <TextView
            android:id="@+id/tv_JoinTitle"
            android:text="히지 팬클럽★"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="30dp"
    />
    <LinearLayout
            android:id="@+id/ln_Join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_JoinTitle"
            android:layout_marginTop="230dp"
    >

        <EditText
                android:id="@+id/et_JoinID"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="아이디를 입력하세요."
        />
        <EditText
                android:id="@+id/et_JoinPW"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="패스워드를 입력하세요."
        />
        <EditText
                android:id="@+id/et_retypePW"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="한번 더 패스워드를 입력하세요."
        />
    </LinearLayout>


    <Button
            android:id="@+id/bt_Join"
            android:text="home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>